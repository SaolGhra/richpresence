{
  "manifest_version": 3,
  "name": "Music Rich Presence",
  "version": "1.0",
  "description": "Displays currently playing media on Discord as rich presence.",
  "permissions": ["activeTab", "storage", "scripting"],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "author": "SaolGhra",
  "content_scripts": [
    {
      "matches": ["*://music.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "512": "icon512.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "512": "icon512.png"
    }
  }
}
